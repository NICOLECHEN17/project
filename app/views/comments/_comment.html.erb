<li id="comment-<%= comment.id %>">
<span class="commentuser"><%= link_to comment.user.name, comment.user %><br /><br /></span>
<span class="commentcontent"><%= comment.content %><br /><br /></span>
<span class="commenttimestamp">
made comment <%= time_ago_in_words(comment.created_at) %> ago.
<% if current_user?(comment.user) %>
<%= link_to "delete", micropost_comment_path(comment.micropost,comment),
			data: {confirm: "You sure?"},
			method: :delete %>
 <% end %>
</span>
</li>
